// ресайзы
// по скольку габариты анимации зависят от высоты - то юзаем min-height
@media screen and (min-height: 400px)
  .display_container
    .chatHeaderWrapper
      .chatHeader
        .chatHeader__main
          .headAndDate
            .headAndDate__sub_title
              font-size: 1.4vh
            .headAndDate__head
              font-size: 2vh;
              // margin-left: 2.5vh;
            // .headAndDate__date
            //   font-size: 1.5vh
          .titleWrap
            .titleWrap__circle
              margin-left: 2.5vh;
              margin-right: 0.6vh;
              height 1vh
              width 1vh
                
  .chatSend > #send-message
    font-size: 2vh;
    height: 3vh;
    width: 3vh;
    line-height: 2.5vh;
    top: 1vh;
    padding: 1vh 2vh;
    padding-top: 0px;
    img
      width: 2vh;
      margin-right: 4.3vh;
  .chatSend .sendText
    padding-left: 3vh;
    padding-right: 3vh;
    width: calc(100% - 8.5vh);
  .chatContent .chat-column
    margin-bottom: 1vh;
  .chatContent .chat-column > .item > .chat-icon
    font-size: 1vh
    width 3vh
    height 3vh
    line-height: 1vh;
    margin-top: 0.3vh;
    img
      width: 3vh;
      margin-right: 1vh;
  .chatContent .chat-column > .item > .chat-message 
    font-size: 1.8vh
    line-height: 2.5vh;
    padding: 1vh 1.5vh;
    border-radius: 0.1vh 2vh 2vh 2vh;
  .chatContent .chat-column > .item > .message-date
    font-size: 1.5vh
    margin-bottom: 0.4vh;
  .chatTopHeaderContainer
    .chatTopHeader
      .topHeaderItem.topHeaderTimeWrap
        .topHeaderTime
          margin-top: 0.1vh
          font-size: 1.5vh
  .chatContentWrapper
    .date_dialogs
      font-size: 1.5vh
    .options_wrapper
      margin-bottom: 2vh;
      .chat_options
        width: fit-content;
        .optin_item
          button.option_btn
            width: 100%;
            text-align: left;
            margin: 0.3vh 0px;
            padding: 0.8vh 2vh;
            font-size: 1.8vh;
            border-radius: 0.8vh;
  .chatSend .sendText
    font-size: 1.5vh
    border-radius: 0px 0px 3.3vh 3.3vh;
  .simplebar-track.simplebar-vertical
    width 1.5vh
  #writer
    font-size: 2vh;
  #writer,
  .cursor
    position: relative;
    top: -0.8vh;
  #getter
    margin-left: 2.5vh;
  .cursor
    height: 1.7vh;
  .before-grid
    margin: 1vh 0vh;
  .grid
    box-shadow: 0px 0px 3px 0.1vh #adadad;
  .grid > span
    padding: 1vh 1vh;
