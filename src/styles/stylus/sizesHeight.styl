// ресайзы
// по скольку габариты анимации зависят от высоты - то юзаем min-height
@media screen and (min-height: 400px)
  .display_container
    .chatHeaderWrapper
      .chatHeader
        .chatHeader__main
          .headAndDate
            .headAndDate__sub_title
              font-size: 1.4vh
            .headAndDate__head
              font-size: 2vh;
    #chat-ui-input
      justify-content: space-between;
      .input-element:first-child
        margin-left: bottomLeftRightOffsets
      .input-element
        width: 6%
        margin: 0px auto
        .input-element-item
          margin: 0 auto;
          &.attach
            width: 20px; height: 20px;
            background: url('../../assets/img/icons/transparent/css_sprites_20px.png') -90px -10px;
          &.micro
            width: 20px; height: 20px;
            background: url('../../assets/img/icons/transparent/css_sprites_20px.png') -127px -10px;
          &.gallery
            width: 20px; height: 20px;
            background: url('../../assets/img/icons_red_phone_transformer/gallery@2x.png');
            background-size: 100%

      .input-element.attach-wrap
        .input-element-item.attach
          //
      .chatSend
        width: 70%
        margin-right: bottomLeftRightOffsets;
        height: auto
        #terminal
          //
          height: auto
          .chatSend__TextAndSend
            margin: 0vw;
            height: 2em;
            line-height: 2em;
            .sendText-wrap
              background: url('../../assets/img/icons/transparent/emoji.svg') no-repeat scroll 98% 50% #ffffff;
              background-size: sendTextBgSize
              height 100%
              width: 100%;
              min-height: 30px;
              border-radius: 3.3vh;
              #setter.sendText
                background: url('../../assets/img/icons/transparent/emoji.svg') no-repeat scroll 98% 50% #ffffff;
                background-size: sendTextBgSize
                box-shadow: 1px 1px 3px 0px darkenGrayColor
                padding: 0em leftOffsetInput 0em rightOffsetInput;
                font-size: 15px
                border-radius: 3.3vh
                // width calc(100% - 2em)
                width: 100%
                height: 100%;
                min-height: 30px
                border-radius: 20px;
            #getter
              height: 100%
              width: calc(100% - 2em);
              span#writer
                height: 100%
                padding: 0em 0em 0em leftOffsetInput;
                font-size: 15px
                position: relative
              b#cursor.cursor
                font-size 12px
                width 3px
                max-width 3px
                text-indent -5px
                height 1.2em
                // top: 0.7em
                position: relative
      .input-element.micro-wrap
        .input-element-item.micro
          //            
  .chatSend .sendText
    padding-left: 3vh;
    padding-right: 3vh;
    width: calc(100% - 8.5vh);
  .chatContent .chat-column
    margin-bottom: 1vh;
  .chatContent .chat-column > .item > .chat-icon
    font-size: 1vh
    width 3vh
    height 3vh
    line-height: 1vh;
    margin-top: 0.3vh;
    img
      width: 3vh;
      margin-right: 1vh;
  .chatContent .chat-column > .item > .chat-message 
    font-size: 1.8vh
    line-height: 2.5vh;
    padding: 1vh 1.5vh;
    border-radius: 0.1vh 2vh 2vh 2vh;
  .chatContent .chat-column > .item > .message-date
    font-size: 1.5vh
    margin-bottom: 0.4vh;
  .chatTopHeaderContainer
    padding: 0.5em 1.3em;
    .chatTopHeader
      .topHeaderItem.topHeaderTimeWrap
        .topHeaderTime
          margin-top: 0.1vh
          font-size: 1.5vh
  .chatContentWrapper
    .date_dialogs
      font-size: 1.5vh
    .options_wrapper
      margin-bottom: 2vh;
      .chat_options
        width: fit-content;
        .optin_item
          button.option_btn
            width: 100%;
            text-align: left;
            margin: 0.3vh 0px;
            padding: 0.8vh 2vh;
            font-size: 1.8vh;
            border-radius: 0.8vh;
  .chatSend .sendText
    font-size: 1.5vh
    border-radius: 0px 0px 3.3vh 3.3vh;
  .simplebar-track.simplebar-vertical
    width 1.5vh
  #writer
    font-size: 2vh;
  #writer,
  .cursor
    position: relative;
    // top: -0.8vh;
  #getter
    // margin-left: 2.5vh;
  .cursor
    height: 1.7vh;
  .before-grid
    margin: 1vh 0vh;
  .grid
    box-shadow: 0px 0px 3px 0.1vh #adadad;
  .grid > span
    padding: 1vh 1vh;
