// header
.app-header.user-options {
  .user-options__options.user-control {
    display: flex;
    justify-content: space-between;
    margin: 0 10px;
    .user-control__item {
      .user-control__img {
        width: 26px;
      }
    }
  }
  .user-options__search {
    width: 100%;
    text-align: center;
    margin: 10px auto;
    .search-input {
      background: url('../../assets/img/icons_red_phone_transformer_chat_list/search@2x.png') no-repeat scroll 1em 50% #eff3f6;
      background-size: 1.25em;
      padding: 0.1em 1em 0.1em 3em;
      font-size: 15px;
      border: 0;
      width: calc(100% - 20px);
      height: 100%;
      min-height: 30px;
      border-radius: 20px;
      font-family: 'TT Norms Pro Regular';
    }
  }
}

// content
.chats-list {
  .chat-item.need-item {
    cursor pointer
  }
  .chat-item {
    display: flex;
    justify-content: space-between;
    margin: 0 10px;
    .chat__logo-and-heading {
      display: flex;
      .chat__avatar {
        height: 60px;
        margin: 5px;
      }
      .chat__heading {
        width: 80%;
        margin: auto 0;
        margin-left: 5px;
        .chat__title {
          margin: 0px;
          text-transform: capitalize;
          font-size: 1em;
        }
        .chat__sub_title {
          margin: 0px;
          text-transform: capitalize;
          font-size: 0.9em;
          color: darken(backgroundOptBtns, 30);
        }
      }
    }
    .chat__date {
      .chat__date__time {
        font-size: 1em;
        color: darken(backgroundOptBtns, 30);
      }
    }
  }
}

// footer
.sections-app-wrapp {
    width: 100%;
    height: 4em;
    display: flex;
    align-items: flex-start;
    background-color: lightGrayColor
  .sections-app {
    height: 80%;
    width: 100%;
    display: flex;
    justify-content: space-evenly;
    margin-top: 1%;
    .sections-app__item {
      height: 100%;
      text-align: center;
      img.section_img {
        height: 25px;
      }
      p.section_heading {
        margin: 0;
        font-size: 0.8em;
        color: darken(backgroundOptBtns, 30);
      }
    }
    .sections-app__item.active-section {
      img.section_img {}
      p.section_heading {
        color: lightBlue
      }
    }
  }
}